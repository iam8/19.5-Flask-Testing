{# Template for homepage of Boggle app. #}

{% extends "base.jinja2" %}

{% block content %}

    <h1>Boggle</h1>

    <h3>Player Statistics</h3>
    <div id="num-games">Total games played: {{ session.get("num_games", "N/A") }}</div>
    <div id="highest-score">Highest endgame score: {{ session.get("max", "N/A") }}</div>
    <hr>

    <table id="board">
        {% for row in board %}
            <tr>
                {% for letter in row %}
                    <td>{{ letter }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>

    <h2>Guess a word!</h2>
    <div id="time-remaining"></div>
    <div id="score-total">Current score: 0</div>

    {# Form for submitting a word guess #}
    <form id="guess-form" method="POST">
        <label for="word-guess">Guess:</label>
        <input id="word-input" type="text" name="word-guess" placeholder="Enter a word">

        <button id="submit-button">Submit</button>
    </form>

    <br>
    <div id="guess-display"></div>
    <div id="validity-msg"></div>

{% endblock content %}
